<Window x:Class="FGMerge.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FGMerge"
        mc:Ignorable="d"
        Title="Error" Height="250" Width="350">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="ErrorMessage" Text="An error occurred." TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Margin="10,0,10,10"/>
        <Button Grid.Row="1" VerticalAlignment="Center" Click="ButtonOK_OnClick">OK</Button>
    </Grid>
</Window>
